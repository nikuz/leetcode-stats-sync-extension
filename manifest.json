{
  "manifest_version": 3,
  "name": "Leetcode Stats Sync Extension",
  "version": "1.0",
  "description": "Grab Leetcode Cookie",
  "host_permissions": [
    "*://*.leetcode.com/*"
  ],
  "permissions": [
    "cookies"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}